@import "bootstrap-sass/assets/stylesheets/bootstrap-sprockets";
@import "bootstrap-sass/assets/stylesheets/bootstrap";

/* Import the fonts */
@font-face {
// Workaround to avoid using rails serve static files setting.
  <% path = 'bootstrap-sass/assets/fonts/bootstrap/' %>
  font-family: 'Glyphicons Halflings';
  src: url(<%= asset_path("#{path}glyphicons-halflings-regular.eot") %>);
  src: url(<%= asset_path("#{path}glyphicons-halflings-regular.eot?#iefix") %>) format('embedded-opentype'),
       url(<%= asset_path("#{path}glyphicons-halflings-regular.woff") %>) format('woff'),
       url(<%= asset_path("#{path}glyphicons-halflings-regular.ttf") %>) format('truetype'),
       url(<%= asset_path("#{path}glyphicons-halflings-regular.svg#glyphicons_halflingsregular") %>) format('svg');
}



.main-title {
  font-size: 87px;
}

.sub-title {
  font-size: 35px;
}

.main-description {
  font-size: 21px;
}

.main-navbar {
  padding: 20px 0;

  li {
    font-size: 23px;
  }
}

.code {
  padding: 0 10px;
}

.search-box {
  min-width: 500px;
}

.hover {
  cursor: pointer;
  cursor: hand;
}

input[type="number"] {
  width:50px;
  text-align: center;
}

#comment {
  width: 100%;

  textarea {
    height: 100px;
    resize: none;
  }
}

#search-btn-group {
  width: 35%
}

#detailed-search .form-group:last-child{
  width: 67%
}

.checkout-note span {
  display: block;
}

.checkout-title {
  font-weight: bold;
  font-size: 26px;
}

.desc {
  font-size: 12px;
}

table.order-items-list {
  margin-top: 110px;
}

.receipt-container {
  margin: 0 auto;
  max-width: 752px;
  box-shadow: 10px 10px 5px #888888;
}

.receipt-footer {
  margin-bottom: 40px;
}

.auth-msg {
  position: absolute;
  width: 100%;
}

.add-to-cart-button {
  @extend .text-success;
  @extend .glyphicon;
  @extend .pull-right;
  @extend .hover;

  visibility: hidden;
  opacity: 0;
}

.added-to-card {
  visibility: visible;
  opacity: 1;
}

.product-inline:hover .glyphicon-plus {
  @extend .added-to-card;

  font-size: 1.5em;
  transition: transform 0.5s;
  transform: rotate(360deg);
  transition-delay: 0.5s;
}

form#register.form-horizontal {
  display: none;
}

#right {
  position: fixed;
  top: 57px;
  bottom: 0;
  left: 20px;
  width: 30%;
  overflow-y: scroll;
}