.container-fluid
  .col-xs-2 data={ ng_include: "'products/_fill_imgs.html'" }

  .col-xs-8
    div data={ ng_include: "'products/_header.html'" }

    / h1 Cart

    table.table.table-hover.table-condensed data={ ng_include: "'cart/item.html'" }
    
    button.btn.btn-block.btn-success data={ ui_sref: "cart.search" } Поиск/добавление товара

    .row
      .form-group.col-sm-8
        #comment.input-group
          label Комментарий к заказу:
          textarea.form-control { placeholder="Введите текст..."
                                  data={ ng_model: "vm.order.comment",
                                         ng_change: "vm.updateOrder()" } }
      .col-sm-4
        form.form-horizontal
          .form-group
            label.col-sm-6.control-label Всего (руб.):
            .col-sm-6
              p.form-control-static data={ ng_bind: "vm.total | currency : '' : 2" }
          .form-group
            label.col-sm-6.control-label НДС (в т.ч.):
            .col-sm-6
              p.form-control-static data={ ng_bind: "(vm.total * 18 / 118.0) | currency : '' : 2" }


    ul.list-unstyled.row.main-navbar.text-center
      li.col-xs-6: p
        | (495)669-40-40
      li.col-xs-6: p 1@elmarket.org

  .col-xs-2 data={ ng_include: "'products/_fill_imgs.html'" }
